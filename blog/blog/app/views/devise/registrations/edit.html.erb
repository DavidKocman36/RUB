<div class="mx-auto align-items-center justify-content-center">
  <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mx-auto align-items-center justify-content-center py-3">
      <div class="field mx-auto align-items-center justify-content-center">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mx-auto align-items-center justify-content-center">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          
          <em><%= @minimum_password_length %> characters minimum</em>
          <br />
          <br />
        <% end %>
      </div>

      <div class="field mx-auto align-items-center justify-content-center">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mx-auto align-items-center justify-content-center">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions mx-auto text-center pt-2">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <!-- Could have been done better bu I have no access to the controller -->
  <h3 class="text-center">Commented posts<h3>
  <div class="mx-auto align-items-center justify-content-center">
    <% current_user.comments.each do |comment| %>
      <p><%= link_to Article.distinct(comment.article_id).find(comment.article_id).title, article_path(comment.article_id), class: "link-dark"%></p>
    <% end %>
  </div>

  <h3 class="text-center">Cancel my account</h3>
  <div class="text-center mx-auto align-items-center justify-content-center">
    <p>Unhappy?</p> 
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
    <p class="pt-3"><%= link_to "Back", :back, class: "link-dark"%><p>
  </div>

  
</div>