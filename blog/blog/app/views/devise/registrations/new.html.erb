<div class="mx-auto align-items-center justify-content-center text-center vh-100">
<h2 class="pt-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mx-auto d-flex flex-column align-items-center justify-content-center pt-3">
    <%= f.label :username%>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control w-25" %>
  </div>

  <div class="field mx-auto d-flex flex-column align-items-center justify-content-center pt-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control w-25" %>
  </div>

  <div class="field mx-auto d-flex flex-column align-items-center justify-content-center pt-4">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control w-25" %>
  </div>

  <div class="actions mx-auto align-items-center justify-content-center pt-3">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="actions mx-auto align-items-center justify-content-center pt-3">
  <%= render "devise/shared/links" %>
</div>
</div>
