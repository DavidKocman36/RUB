<h1>Articles</h1>

<%if  user_signed_in? && current_user.admin? %>
    <%= button_to "New article", new_article_path, method: :get%>
<%end%>

<ul>
  <% @articles.each do |article| %>
    <li>
      <a href="/articles/<%= article.id %>">
        <%= article.title %>
      </a>
    </li>
  <% end %>
</ul>
